<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs', {title: 'My Reviews | FLO Motion Fitness'}) %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/rev-details.css">
</head>

<body>
    <%- include('../partials/nav.ejs') %>

    <section class="reviews">
        <h1 class="entry-title">Title:</h1>
        <h1>" <%= rev.reviewName %> "</h1>
        <div class="table-container">
            <table>
                <tr>
                    <td>
                        <h2 class="entry-label">Workout Time:</h2>
                        <h2><%= rev.reviewTime %> mins</h2>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h2 class="entry-label">What I liked:</h2>
                        <h2><%= rev.reviewPros %></h2>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h2 class="entry-label">What I would change:</h2>
                        <h2><%= rev.reviewCons %></h2>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h2 class="entry-label">Date submitted:</h2>
                        <h2><%= rev.reviewDate.toLocaleDateString() %></h2>
                    </td>
                </tr>
            </table>
        </div>
    </section>

    <section id="entry-action">
        <button class="btn"><a href="../reviews/<%= rev._id %>/edit">Edit</a></button>
        <button class="btn" data-delete="true">Delete</button>
    </section>
   
    <!-- Confirm delete Modal -->
    <div id="confirmDeleteModal" class="modal">
        <div class="modal-content">
          <div class="modal-body">
            <p>Are you sure you want to delete this entry?</p>
          </div>
          <div class="modal-footer">
            <form id="deleteForm" method="POST" action="../reviews/<%= rev._id %>?_method=DELETE">
              <input class="btn btn-danger" type="submit" value="Delete" />
            </form>
            <button id="cancelBtn" class="btn">Cancel</button>
          </div>
        </div>
      </div>

    <script>
      document.addEventListener('DOMContentLoaded', () => {
  const modal = document.getElementById('confirmDeleteModal');
  const deleteBtn = document.querySelector('#entry-action button[data-delete="true"]');
  const cancelBtn = document.getElementById('cancelBtn');

  // Function to open the modal
  function openModal() {
    modal.style.display = 'block';
  }

  // Function to close the modal
  function closeModal() {
    modal.style.display = 'none';
  }

  // Event listener to open the modal when the delete button is clicked
  deleteBtn.addEventListener('click', openModal);

  // Event listener to close the modal when the cancel button is clicked
  cancelBtn.addEventListener('click', closeModal);
});

    </script>

    <%- include('../partials/footer.ejs') %>
</body>

</html>

<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs', {title: 'My Reviews | FLO Motion Fitness'}) %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/workout-index.css">
</head>

<body>
    <%- include('../partials/nav.ejs') %>

    <section class="hero">
        <h2>My Workout Journal</h2>
        <h3>Track your workouts!</h3>
    </section>

    <main>
        <section class="listings">
            <ul>
                <% revs.forEach(function(rev) { %>
                <li>
                    <h4><%= rev.reviewName %> - <%= rev.reviewTime %> minutes</h4>
                    <p>Created: <%= rev.reviewDate %></p>
                    <a href="/reviews/<%= rev._id %>">Read More</a>
                </li>
                <% }); %>
            </ul>
        </section>
        
    </main>

    <%- include('../partials/footer.ejs') %>
</body>

</html>
